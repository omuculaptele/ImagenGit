<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recorder">


    <Button
        android:id="@+id/btnGrabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="20dp"
        android:text="Grabar"
        android:onClick="onClickGrabar"
        app:layout_constraintBottom_toTopOf="@+id/btnReproducir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="0dp"
        android:text="Reproducir"
        android:onClick="onClickReproducir"
        app:layout_constraintBottom_toTopOf="@+id/btnParar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGrabar" />

    <Button
        android:id="@+id/btnParar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="446dp"
        android:text="Parar"
        android:onClick="onClickParar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReproducir" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="368dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnParar" />
</androidx.constraintlayout.widget.ConstraintLayout>